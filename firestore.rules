
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Publicly readable collections
    match /{collection}/{doc} 
      where collection in ['blogs', 'courses', 'pages', 'settings', 'testimonials'] {
      allow read: if true;
      allow write: if request.auth != null && isAdmin();
    }
    
    // Enrollments subcollection
    match /courses/{courseId}/enrollments/{enrollmentId} {
      // Anyone can enroll in a course
      allow create: if true; 
      // Only admins can see who is enrolled
      allow read, list, delete: if request.auth != null && isAdmin();
    }
    
    // User collection rules
    match /users/{userId} {
        // Any authenticated user can create their own user document
        allow create: if request.auth != null;
        // Only the user themselves or an admin can read/update their own document
        allow read, update: if request.auth.uid == userId || (request.auth != null && isAdmin());
        // Only admins can delete user documents
        allow delete: if request.auth != null && isAdmin();
    }
  }
}
