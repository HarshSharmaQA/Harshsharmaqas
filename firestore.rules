rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return request.auth != null && request.auth.email == 'harshsharmaqa@gmail.com';
    }

    function isUser(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    match /users/{uid} {
      allow list: if isAdmin(); // Allow admin to list users for the dashboard
      allow read: if isUser(uid) || isAdmin();
      allow create;
      allow write: if isUser(uid) || isAdmin();
    }
    
    match /blogs/{blogId} {
      allow read;
      allow write: if isAdmin();
      
      match /likes/{userId} {
        allow read;
        allow create, delete: if isUser(userId);
      }
    }
    
    match /courses/{courseId} {
      allow read;
      allow list: if isAdmin(); // Allow admin to list courses for the dashboard
      allow write: if isAdmin();
    }
    
    match /testimonials/{testimonialId} {
        allow read;
        allow write: if isAdmin();
    }
    
    match /pages/{pageId} {
        allow read;
        allow write: if isAdmin();
    }

    match /settings/site {
      allow read;
      allow write: if isAdmin();
    }
  }
}
