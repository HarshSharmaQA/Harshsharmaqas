
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read on content collections
    match /blogs/{blogId} {
      allow get, list: if true;
      allow write: if false; // Add admin check for production
    }
    match /courses/{courseId} {
      allow get, list: if true;
      allow write: if false; // Add admin check for production
    }
    match /pages/{pageId} {
        allow get, list: if true;
        allow write: if false; // Add admin check for production
    }
    match /settings/{settingId} {
      allow get, list: if true;
      allow write: if false; // Add admin check for production
    }
    match /testimonials/{testimonialId} {
        allow get, list: if true;
        allow write: if false; // Add admin check for production
    }

    // Allow anyone to submit an enrollment form
    match /enrollments/{enrollmentId} {
        allow create: if true;
        allow read, update, delete: if false; // Add admin check for production
    }
    
    // Users can only be created if signed in, and can only edit their own user document
    match /users/{userId} {
      allow read: if true;
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && request.auth.uid == userId;
      allow delete: if false; // Add admin check for production
    }
  }
}
