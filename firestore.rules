rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isUser(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    match /users/{uid} {
      allow read, write: if isUser(uid) || (request.auth != null && request.auth.email == 'harshsharmaqa@gmail.com');
      allow list: if request.auth != null && request.auth.email == 'harshsharmaqa@gmail.com';
    }
    
    match /blogs/{blogId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.email == 'harshsharmaqa@gmail.com';
      
      match /likes/{userId} {
        allow read: if true;
        allow create, delete: if isUser(userId);
      }
    }
    
    match /courses/{courseId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.email == 'harshsharmaqa@gmail.com';
    }
    
    match /testimonials/{testimonialId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.email == 'harshsharmaqa@gmail.com';
    }
    
    match /pages/{pageId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.email == 'harshsharmaqa@gmail.com';
    }

    match /settings/site {
      allow read: if true;
      allow write: if request.auth != null && request.auth.email == 'harshsharmaqa@gmail.com';
    }
  }
}
